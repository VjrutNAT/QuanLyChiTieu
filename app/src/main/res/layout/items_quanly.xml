<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_add_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_quanly">

        <TextView
            android:id="@+id/tv_nameAccountManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_4dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_18dp" />

        <TextView
            android:id="@+id/tv_moneyManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nameAccountManager"
            android:layout_margin="@dimen/margin_4dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_18dp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_4dp"
            android:background="@color/colorRed"
            android:text="@string/delete" />
    </RelativeLayout>
</RelativeLayout>